<h1>Bulk Discounts for <%= @merchant.name %></h1>
<% @merchant.bulk_discounts.each do |discount| %>
  <div id="bulk-discount-<%=discount.id%>">
    <p><%= discount.percentage_discount%>% off <%=discount.quantity_threshold%> or more of an item</p>
    <p><%= link_to "View Bulk Discount", merchant_bulk_discount_path(@merchant, discount) %></p>
  </div>
<% end %>

<p><%= link_to "Create a new discount", new_merchant_bulk_discount_path(@merchant) %></p>